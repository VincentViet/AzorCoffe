<?xml version="1.0" encoding="UTF-8"?>

<?import com.jfoenix.controls.JFXDrawer?>
<?import com.jfoenix.controls.JFXHamburger?>
<?import de.jensd.fx.glyphs.fontawesome.FontAwesomeIconView?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.Cursor?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>

<AnchorPane prefHeight="720.0" prefWidth="1280.0" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.azor.manager.Scene">
   <children>
      <BorderPane fx:id="borderPane" prefHeight="720.0" prefWidth="1280.0" stylesheets="@../css/titlebutton.css">
         <top>
            <HBox alignment="CENTER_RIGHT" prefHeight="31.0" prefWidth="1280.0" BorderPane.alignment="CENTER">
               <children>
                  <JFXHamburger fx:id="hamburger" prefHeight="20.0" prefWidth="30.0">
                     <HBox.margin>
                        <Insets right="1175.0" />
                     </HBox.margin>
                  </JFXHamburger>
                  <FontAwesomeIconView fx:id="minimizeButton" fill="#868e96" fontSmoothingType="LCD" glyphName="MINUS_CIRCLE" onMouseClicked="#minimize" size="1.2em" styleClass="title-button">
                     <HBox.margin>
                        <Insets left="5.0" right="5.0" />
                     </HBox.margin>
                     <cursor>
                        <Cursor fx:constant="HAND" />
                     </cursor>
                  </FontAwesomeIconView>
                  <FontAwesomeIconView fx:id="maximizeButton" fill="#868e96" fontSmoothingType="LCD" glyphName="CIRCLE" onMouseClicked="#maximize" size="1.2em" styleClass="title-button">
                     <HBox.margin>
                        <Insets left="5.0" right="5.0" />
                     </HBox.margin>
                     <cursor>
                        <Cursor fx:constant="HAND" />
                     </cursor>
                  </FontAwesomeIconView>
                  <FontAwesomeIconView fx:id="closeButton" fill="#ffc107" fontSmoothingType="LCD" glyphName="CLOSE" onMouseClicked="#close" size="1.2em" styleClass="title-button">
                     <HBox.margin>
                        <Insets left="5.0" right="5.0" />
                     </HBox.margin>
                     <cursor>
                        <Cursor fx:constant="HAND" />
                     </cursor>
                  </FontAwesomeIconView>
               </children>
            </HBox>
         </top>
      </BorderPane>
      <JFXDrawer fx:id="drawer" defaultDrawerSize="270.0" prefHeight="720.0" prefWidth="256.0" />
   </children>
</AnchorPane>
